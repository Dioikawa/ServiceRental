<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hole.domain.mapper.CustomerMapper">

    <select id="findCustomerList" resultType="com.hole.domain.entity.Customer">
        SELECT c.*,t.`name` as typeName
        FROM customer c INNER JOIN type t
        on c.typeId=t.id
        <where>
            <if test="typeId!=null">
                and c.typeId = #{typeId}
            </if>
            <!--不要使用 = 判断字符串 ,模糊判断客户姓名-->
            <if test="name != null and name !=''">
                and c.name like concat('%',#{name},'%')
            </if>
            <if test="id!=null">
                and c.id = #{id}
            </if>
        </where>
        order by id asc
    </select>

    <insert id="addBill">
        insert into bills(title,billtime,typeid,price,remark) values(#{title},#{billTime},#{typeId},#{price},#{remark})
    </insert>

    <update id="updateBill">
        update bills
        <set>
            <if test="title!=null and title!=''">
                title = #{title},
            </if>
            <if test="billTime!=null">
                billtime = #{billTime},
            </if>
            <if test="typeId!=null">
                typeId = #{typeId},
            </if>
            <if test="price!=null">
                price = #{price},
            </if>
            <if test="remark!=null and remark!=''">
                remark = #{remark},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteById">
        delete from bills where id = #{id}
    </delete>

</mapper>